{
	"compilerOptions": {
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"DOM",
			"ES2017"
		],
		"sourceMap": true,
		"rootDir": "src",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": false,
		"strict": true
	},
	"exclude": [
		"node_modules",
	],
	"include": [
		"src/**/*.ts",
	]
}
